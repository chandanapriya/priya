<h1>Listing Blood Glucose Readings</h1>

<table class ="table table-bordered">
  <thead>
    <tr>
      <th>Reading</th>
      <th>Status</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blood_glucose_readings.each do |blood_glucose_reading| %>
      <tr>
        <td><%= blood_glucose_reading.reading %></td>
        <td><%= blood_glucose_reading.status %></td>
        <td><%= blood_glucose_reading.patient_id %></td>
        <td><%= link_to 'Show', blood_glucose_reading %></td>
        <td><%= link_to 'Edit', edit_blood_glucose_reading_path(blood_glucose_reading) %></td>
        <td><%= link_to 'Destroy', blood_glucose_reading, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

