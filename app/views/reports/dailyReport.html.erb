<h2>Listing Patients according to date </h2>

<table class ="table table-bordered">
  <thead>
  <tr>
    <th> Date</th>
    <th>Max</th>
    <th>Min</th>
    <th>Avg</th>

  </tr>
  </thead>

  <tbody>
  <% @line_patients.each do |reading| %>
      <tr>
        <td><%= reading.date %></td>
        <td><%= reading.max %></td>
        <td><%= reading.min %></td>
        <td><%= reading.aveg %></td>

      </tr>
  <% end %>
  </tbody>
</table>